{% extends 'base.twig' %}

{% block content %}
	<h1>
		{{ post.title }}
	</h1>

	{{ post.content }}

	{% if post.get_field('joke-author') %}
	    <p class="joke-author">Ingestuurd door {{ post.get_field('joke-author') }}</p>
	{% endif %}

	{% include 'partials/rating.twig' %}

	<p>
		<a class="button secondary" href="{{ archivelink }}">
			&blacktriangleleft; Overzicht
		</a>

		<a class="button align-right" href="{{ nextpostlink }}">
			Nieuwe mop &blacktriangleright;
		</a>
	</p>

{% endblock %}
